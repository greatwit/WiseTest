<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false">
    
    <LinearLayout android:id="@+id/llRemoteView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="1">
    </LinearLayout>
    
        <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:baselineAligned="false">

    
        <RelativeLayout
            android:layout_gravity="bottom"
            android:background="@color/white_overlay"
            android:padding="0.0dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:alpha="0.3">
            
            <LinearLayout android:id="@+id/llLocalView"
		                  android:layout_width="120dip"
		                  android:layout_height="120dip"
		                  android:orientation="vertical"
		                  >
		    </LinearLayout>
            
	    <TextView android:id="@+id/tvStats"
	              android:layout_width="120dip"
	              android:layout_height="60dip"
	              android:textSize="12sp"
	              android:textColor="@color/red"
	              android:layout_centerHorizontal="true"
	              android:text="abc"/>
	    
	    <Button android:id="@+id/btSwitchCamera"
	            android:layout_width="60dip"
                android:layout_height="60dip"
	            android:layout_alignParentRight="true"/>
	    <ImageButton
                android:id="@+id/btStartStopCall"
                android:tag="start"
                android:background="@drawable/record_start"
                android:layout_width="72dip"
                android:layout_height="72dip"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/imagedescription" 
                />
    </RelativeLayout>
    
  </LinearLayout>
  
</FrameLayout>

